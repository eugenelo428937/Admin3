      "Bash(c:/Code/Admin3/.venv/Scripts/coverage.exe report --show-missing --omit=\"*/migrations/*,*/tests/*,*/test_*.py,*/tests.py\" core_auth/views.py)",
      "Bash(c:/Code/Admin3/.venv/Scripts/coverage.exe run --source=. manage.py test core_auth.tests.test_auth_views --keepdb --no-input)",
      "Bash(c:/Code/Admin3/.venv/Scripts/coverage.exe report:*)",
      "Bash(find:*)",
      "Bash(grep:*)"
