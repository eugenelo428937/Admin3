{
	"statusLine": {
		"type": "command",
		"command": "npx -y ccstatusline@latest",
		"padding": 0
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit",
				"hooks": [
					{
						"type": "command",
						"command": "tdd-guard validate --strict",
						"timeout": 10
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit",
				"hooks": [
					{
						"type": "command",
						"command": "tdd-guard check-coverage",
						"timeout": 5
					}
				]
			}
		]
	},
	"permissions": {
		"deny": [
			"Read(.claude/tdd-guard/**)",
			"Write(.claude/tdd-guard/**)",
			"Edit(.claude/tdd-guard/**)",
			"Write(**/tdd-guard.config.js)",
			"Edit(**/tdd-guard.config.js)",
			"Bash(echo:*)",
			"Bash(printf:*)",
			"Bash(sed:*)",
			"Bash(awk:*)",
			"Bash(perl:*)"
		]
	}
}